<script>
function submitRegister(s) {

	var cboNegeri=document.getElementById("negeri").value;
	var cboDaerah=document.getElementById("daerah").value;
	var txtHakmilik=document.getElementById("hakmilik").value;
	var txtWarta=document.getElementById("warta").value;
	var txtLot=document.getElementById("lot").value;

	if ( s == "getResult" ) {
		if ( parseInt(cboNegeri) != 0 && parseInt(cboDaerah) != 0 ) {
		    document.f.command.value = s;
	    	document.f.action = "";
    	} else if ( txtHakmilik != "" || txtWarta != "" || txtLot != "" ) {
		    document.f.command.value = s;
	    	document.f.action = "";
	    } else {
    		alert("Sila pilih sekurang-kurangnya dua pilihan iaitu Negeri dan Daerah, ataupun anda juga boleh memilih untuk mengisi terus No. Hakmilik, No. Warta atau No. Lot/PT"); 
    	}
	} else {
		document.f.command.value = s;
    	document.f.action = "";
	}
	document.f.submit();       	
}   
</script>