<div class="content">
<form name="f" method="post">
<center>
<fieldset>
<table border="0" width="100%" cellpadding="3" cellspacing="1">
    <tr>
        <td align="left"><label for="negeri">Negeri</label></td>
        <td>
            <select id="negeri" name="idNegeri" style="width:100%">
			<option value="0">- Pilihan -</option>
            #foreach ( $lnegeri in $rnegeri )
                #if ( $m_negeri == $lnegeri.id )
                    #set ( $selected = "selected" )
                #else
                    #set ( $selected = "" )
                #end
                <option value="$lnegeri.id" onclick="submitRegister('getDaerah')" $selected>$lnegeri.namaNegeri</option>                
            #end
            </select>
        </td>
    </tr>
    <tr>
        <td align="left"><label for="daerah">Daerah</label></td>
        <td>
            <select id="daerah" name="idDaerah" style="width:100%">
			<option value="0">- Pilihan -</option>
            #foreach ( $ldaerah in $rdaerah )
                #if ( $m_daerah == $ldaerah.id )
                    #set ( $selected = "selected" )
                #else
                    #set ( $selected = "" )
                #end
                <option value="$ldaerah.id" onclick="submitRegister('getMukim')" $selected>$ldaerah.namaDaerah</option>
            #end
            </select>
        </td>
    </tr>
    <tr>
        <td align="left"><label for="mukim">Mukim</label></td>
        <td>
            <select id="mukim" name="idMukim" style="width:100%">
			<option value="0">- Pilihan -</option>
            #foreach ( $lmukim in $rmukim )
                <option value="$lmukim.id">$lmukim.namaMukim</option>
            #end
            </select>
        </td>
    </tr>
    #if ( $role != "online_kjp" )
	    <tr>
	        <td align="left"><label for="kementerian">Kementerian</label></td>
	        <td>
	            <select id="kementerian" name="idKementerian" style="width:100%">
				<option value="0">- Pilihan -</option>
	            #foreach ( $lkementerian in $rkementerian )
	                <option value="$lkementerian.id">$lkementerian.namaKementerian</option>
	            #end
	            </select>
	        </td>
	    </tr>
    #end
	<tr>
		<td align="left"><label for="hakmilik">No. Hakmilik</label></td>
		<td><input type="text" name="noHakmilik" id="hakmilik" tabindex="1" maxlength="15" /></td>
	</tr>
	<tr>
