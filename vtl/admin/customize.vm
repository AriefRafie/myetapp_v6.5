<form name="fcus" method="post">
<table cellpadding="2" cellspacing="0" border="0" align="center">
	<tr><td>
		<input class="stylobutton"  type="button" value="Change Page Theme" onclick="document.location.href='pagetheme'">
	</td></tr>
</table>




<table width="600" align="center" cellspacing="2" border="0">
<tr>

<td style="font-weight:bold">
&nbsp;&nbsp;&nbsp;MY TABS
</td></tr>

<tr><td align="center">

<ul id="tablist" style="list-style-type:none; padding: 10px;">
#set ($cnt = 0 )
#foreach( $tab in $tabs)
#set ( $cnt = $cnt + 1 )

<li id="tablist_$cnt" style="cursor:hand">
<table width="80%" cellspacing="0" cellpadding="4" border="0" bgcolor="lightgrey">
<tr><td bgcolor="#ffffff" style="background:url('../img/tab_left.jpg');width:5px"></td>
<td  style="background:url('../img/tab_mid.jpg')">


<table width="100%">
<tr>
<td width="10" align="center"><a style="cursor:hand;cursor:pointer;">::</a></td>
<td>
<a style="cursor:hand;cursor:pointer;">
$tab.title
</a>
<input type="hidden" name="tabIds" value="${tab.id}">
</td>
<td width="150" align="center">
#if ( !$tab.locked )
<a href="javascript:listModules('$tab.id')" style="text-decoration:underline">Contents</a>
|
<a href="javascript:editTab('$tab.id', '$EkptgUtil.escapeJavaScript($tab.title)')" style="text-decoration:underline">Renamex</a>
|
<a href="javascript:deleteTab('$tab.id')" style="text-decoration:none">X</a>
#else
<img src="../img/icon_lock.gif">
#end
</td>
</tr>
</table>


</td>
<td bgcolor="#ffffff" style="background:url('../img/tab_right.jpg');width:5px"></td>
</tr>
</table>
</li>

#end
</ul>
</td></tr>
<tr><td align="center" height="40">
<input class="stylobutton"  type="button" value="SAVE TABS" onclick="saveTabs()">
</td></tr>
<tr><td align="center" height="40">
Tab:
<input name="tab_title" style="width:200px">
<input class="stylobutton"  type="button" name="buttonTab" value="ADD" onclick="doTab()">
<input class="stylobutton"  type="button" name="buttonReset" value="RESET" onclick="doReset()">
</td></tr>
</table>
<input type="hidden" name="tabId">


</form>

<script type="text/javascript" language="javascript" charset="utf-8">
Sortable.create('tablist');
</script>

<script>
function addNewTab() {
    document.fcus.action = "customize?type=tab&do=add";
    document.fcus.submit();
}
function deleteTab(tabid) {
    if ( !confirm("Delete this Tab?") ) return;
    document.fcus.action = "customize?type=tab&tabId=" + tabid + "&do=deleteTab";
    document.fcus.submit();
}

function saveTabs() {
document.fcus.action = "customize?type=tab&do=saveTabs";
document.fcus.submit();
}
function addTab() {
if ( document.fcus.tab_title.value == "" ) return;
document.fcus.action = "customize?type=tab&do=addTab";
document.fcus.submit();
}
function editTab(id, title) {
document.fcus.tabId.value = id;
document.fcus.tab_title.value = title;
document.fcus.buttonTab.value = "UPDATE";
}
function updateTab() {
document.fcus.action = "customize?type=tab&do=updateTab";
document.fcus.submit();
}
function doTab() {
if ( document.fcus.buttonTab.value == "UPDATE" ) updateTab();
else addTab();
}
function doReset(){
document.fcus.buttonTab.value = "ADD";
document.fcus.tab_title.value = "";
document.fcus.tabId.value = "";
}
function listModules(tabId) {
document.fcus.tabId.value = tabId;
document.fcus.action = "customize?type=tab&do=listModules";
document.fcus.submit();
}

</script>